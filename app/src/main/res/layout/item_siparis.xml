<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewYemek"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:contentDescription="Yemek Resmi"/>

    <TextView
        android:id="@+id/textViewSiparisNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sipariş No: 1"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageViewYemek"
        app:layout_constraintTop_toTopOf="@id/imageViewYemek"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewYemekAdi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yemek Adı"
        app:layout_constraintStart_toStartOf="@id/textViewSiparisNo"
        app:layout_constraintTop_toBottomOf="@id/textViewSiparisNo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
